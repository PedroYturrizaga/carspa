package pe.com.tintegro.controller;

import javax.annotation.Resource;

import org.apache.log4j.Logger;
import org.springframework.http.HttpStatus;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseStatus;
import org.springframework.web.bind.annotation.RestController;

import pe.com.tintegro.dao.util.Constantes;
import pe.com.tintegro.dto.request.ListaAreaxCentroRequest;
import pe.com.tintegro.dto.request.ListarEmpresaAreaRequest;
import pe.com.tintegro.dto.response.ListarAreaxCentroResponse;
import pe.com.tintegro.dto.response.ListarEmpresaAreaResponse;
import pe.com.tintegro.services.EmpresaAreaServices;
import pe.com.tintegro.services.util.Util;

@RestController
@RequestMapping("/empresaArea")
public class EmpresaAreaController
{
	protected transient final Logger LOGGER = Logger.getLogger(this.getClass());

	@Resource(name = "empresaAreaServices")
	protected EmpresaAreaServices empresaAreaServices;

	@RequestMapping(value = "/listarEmpresaArea", method = RequestMethod.POST, produces = MediaType.APPLICATION_JSON_UTF8_VALUE)
	@ResponseStatus(value = HttpStatus.OK)
	public ListarEmpresaAreaResponse listar(@RequestBody ListarEmpresaAreaRequest request, @RequestHeader("codUsuario") String codUsuario, @RequestHeader("token") String token,
			@RequestHeader("idInstancia") String idInstancia)
	{
		ListarEmpresaAreaResponse response = new ListarEmpresaAreaResponse();

		try
		{
			response = empresaAreaServices.listarEmpresaArea(codUsuario, idInstancia);
			response.setEstado(Constantes.ESTADO_TRAMA_OK);
			response.setMensaje("Consulta de Empresa Area Realizada");
		}
		catch (Exception ex)
		{
			response.setEstado(Constantes.ESTADO_TRAMA_ERROR_APP);
			String codError = Constantes.ID_ERROR_APP + Util.getCodigoErrorByDate();
			response.setCodError(codError);
			response.setMensaje("No ha sido posible mostrar la Lista areas de la empresa");
			System.out.println(ex.getMessage());
			LOGGER.error(codError, ex);
		}

		return response;
	}

	@RequestMapping(value = "/listarEmpresaAreaxCentro", method = RequestMethod.POST, produces = MediaType.APPLICATION_JSON_UTF8_VALUE)
	@ResponseStatus(value = HttpStatus.OK)
	public ListarAreaxCentroResponse listarareaxCentro(@RequestBody ListaAreaxCentroRequest request, @RequestHeader("codUsuario") String codUsuario, @RequestHeader("token") String token,
			@RequestHeader("idInstancia") String idInstancia)
	{
		ListarAreaxCentroResponse response = new ListarAreaxCentroResponse();

		try
		{
			response = empresaAreaServices.ListarAreaxCentro(codUsuario, idInstancia, request);
			response.setEstado(Constantes.ESTADO_TRAMA_OK);
			response.setMensaje("Consulta de Area x Centro Costo Realizada");
		}
		catch (Exception ex)
		{
			response.setEstado(Constantes.ESTADO_TRAMA_ERROR_APP);
			String codError = Constantes.ID_ERROR_APP + Util.getCodigoErrorByDate();
			response.setCodError(codError);
			response.setMensaje("No ha sido posible mostrar la Lista");
			System.out.println(ex.getMessage());
			LOGGER.error(codError, ex);
		}

		return response;
	}
}
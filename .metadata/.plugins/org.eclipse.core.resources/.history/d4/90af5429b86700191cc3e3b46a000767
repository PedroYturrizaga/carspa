package pe.com.tintegro.controller;

import javax.annotation.Resource;

import org.apache.log4j.Logger;
import org.springframework.http.HttpStatus;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseStatus;
import org.springframework.web.bind.annotation.RestController;

import pe.com.tintegro.dao.util.Constantes;
import pe.com.tintegro.dto.request.ListaAreaxLlamadaRequest;
import pe.com.tintegro.dto.response.ListaAreaxLlamadaResponse;
import pe.com.tintegro.services.AreaLlamadasServices;
import pe.com.tintegro.services.util.Util;

@RestController
@RequestMapping("/areaLlamada")
public class AreaLlamadaController
{
	@Resource(name="areaLlamadasServices")
	protected AreaLlamadasServices areaLlamadasServices;
	
	protected transient final Logger LOGGER = Logger.getLogger(this.getClass());
	
	@RequestMapping(value = "/listarAreaLlamada", method = RequestMethod.POST, produces = MediaType.APPLICATION_JSON_UTF8_VALUE)
	@ResponseStatus(value = HttpStatus.OK)
	public ListaAreaxLlamadaResponse listaAreaLlamada(@RequestBody ListaAreaxLlamadaRequest request, @RequestHeader("codUsuario") String codUsuario, @RequestHeader("token") String token,@RequestHeader("idInstancia") String idInstancia)
	{
		ListaAreaxLlamadaResponse response = new ListaAreaxLlamadaResponse();
		try
		{
			response = areaLlamadasServices.listarAreaxLlamada(codUsuario,idInstancia, request);
			response.setEstado(Constantes.ESTADO_TRAMA_OK);
			response.setMensaje("Consulta de AreaxLlamada Realizada");
		}
		catch (Exception ex)
		{
			response.setEstado(Constantes.ESTADO_TRAMA_ERROR_APP);
			String codError = Constantes.ID_ERROR_APP + Util.getCodigoErrorByDate();
			response.setCodError(codError);
			response.setMensaje("No ha sido posible mostrar las Llamadas por Area");
			System.out.println(ex.getMessage());
			LOGGER.error(codError, ex);
		}
		
		return response;
	}
}
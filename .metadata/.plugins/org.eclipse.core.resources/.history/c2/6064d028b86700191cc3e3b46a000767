package pe.com.tintegro.controller;

import javax.annotation.Resource;

import org.apache.log4j.Logger;
import org.springframework.http.HttpStatus;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseStatus;
import org.springframework.web.bind.annotation.RestController;

import pe.com.tintegro.dao.util.Constantes;
import pe.com.tintegro.dto.request.EstadoMonitoreoServicioRequest;
import pe.com.tintegro.dto.request.ListaMonitoreoServicioRequest;
import pe.com.tintegro.dto.response.EstadoMonitoreoServicioResponse;
import pe.com.tintegro.dto.response.ListaMonitoreoServicioResponse;
import pe.com.tintegro.services.MonitoreoServicioServices;
import pe.com.tintegro.services.util.Util;

@RestController
@RequestMapping("/monitoreoServicio")
public class MonitoreoServicioController {
	
	protected transient final Logger LOGGER = Logger.getLogger(this.getClass());
	@Resource(name = "monitoreoServicioServices")
	protected MonitoreoServicioServices monitoreoServicioServices;
	
	@RequestMapping(value = "/listar", method = RequestMethod.POST, produces = MediaType.APPLICATION_JSON_UTF8_VALUE)
	@ResponseStatus(value = HttpStatus.OK)	
	public ListaMonitoreoServicioResponse listaMonitoreoServicio(@RequestHeader("codUsuario") String codUsuario, @RequestHeader("token") String token, @RequestHeader("idInstancia") String idInstancia,
			@RequestBody ListaMonitoreoServicioRequest request){
		
		ListaMonitoreoServicioResponse response =new ListaMonitoreoServicioResponse();
		try
		{
			response = monitoreoServicioServices.listaMonitoreoServicio(codUsuario, idInstancia, request);
			response.setEstado(Constantes.ESTADO_TRAMA_OK);
			response.setMensaje("Monitoreo de Servicio Listo");
		}
		catch (Exception ex)
		{
			response.setEstado(Constantes.ESTADO_TRAMA_ERROR_APP);
			String codError = Constantes.ID_ERROR_APP + Util.getCodigoErrorByDate();
			response.setCodError(codError);
			response.setMensaje("No se ha podido Monitorear Servicio");
			System.out.println(ex.getMessage());
			LOGGER.error(codError, ex);
		}		
		return response;
	}		
	
	@RequestMapping(value = "/cambiarEstado", method = RequestMethod.POST, produces = MediaType.APPLICATION_JSON_UTF8_VALUE)
	@ResponseStatus(value = HttpStatus.OK)	
	public EstadoMonitoreoServicioResponse cambioEstado(@RequestHeader("codUsuario") String codUsuario, @RequestHeader("token") String token, @RequestHeader("idInstancia") String idInstancia,
			@RequestBody EstadoMonitoreoServicioRequest request){
		
		EstadoMonitoreoServicioResponse response =new EstadoMonitoreoServicioResponse();
		try
		{
			System.out.println("aa "+request.getNombre()+" "+request.getEstado());
			response = monitoreoServicioServices.cambioEstado(codUsuario, idInstancia, request);
			response.setEstado(Constantes.ESTADO_TRAMA_OK);
			response.setMensaje("Se cambio estado de Servicio");
		}
		catch (Exception ex)
		{
			response.setEstado(Constantes.ESTADO_TRAMA_ERROR_APP);
			String codError = Constantes.ID_ERROR_APP + Util.getCodigoErrorByDate();
			response.setCodError(codError);
			response.setMensaje("No se ha cambiado estado");
			System.out.println(ex.getMessage());
			LOGGER.error(codError, ex);
		}		
		return response;
	}		
}

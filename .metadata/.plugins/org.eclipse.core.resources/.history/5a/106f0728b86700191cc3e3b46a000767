package pe.com.tintegro.controller;

import javax.annotation.Resource;

import org.apache.log4j.Logger;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import pe.com.tintegro.dao.util.Constantes;
import pe.com.tintegro.dto.request.ListaCentroCostoLlamadaRequest;
import pe.com.tintegro.dto.response.ListaCentroCostoLlamadaResponse;
import pe.com.tintegro.services.CentroCostoLlamadaServices;
import pe.com.tintegro.services.util.Util;

@RestController
@RequestMapping("/centroCostoLlamada")
public class CentroCostoLlamadaController
{

	@Resource(name = "centroCostoLlamadaServices")
	protected CentroCostoLlamadaServices centroCostoLlamadaServices;

	protected transient final Logger LOGGER = Logger.getLogger(this.getClass());

	@RequestMapping("/listaCetroCosto")
	public ListaCentroCostoLlamadaResponse listaCentroCostoLlamada(@RequestBody ListaCentroCostoLlamadaRequest request, @RequestHeader("codUsuario") String codUsuario,
			@RequestHeader("token") String token, @RequestHeader("idInstancia") String idInstancia)
	{
		ListaCentroCostoLlamadaResponse response = new ListaCentroCostoLlamadaResponse();

		try
		{
			response = centroCostoLlamadaServices.listaCentroCostoLLamada(codUsuario, idInstancia, request);
			response.setEstado(Constantes.ESTADO_TRAMA_OK);
			response.setMensaje("Coonsulta a CentroCosto exitosa");
		}
		catch (Exception ex)
		{
			response.setEstado(Constantes.ESTADO_TRAMA_ERROR_APP);
			String codError = Constantes.ID_ERROR_APP + Util.getCodigoErrorByDate();
			response.setCodError(codError);
			response.setMensaje("No ha sido posible mostrar los Costos de Llamada de los Centros");
			System.out.println(ex.getMessage());
			LOGGER.error(codError, ex);
		}
		return response;
	}

}